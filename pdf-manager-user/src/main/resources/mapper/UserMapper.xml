<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pdf.manager.pdfmanageruser.dao.IUser">
    <resultMap id="userMap" type="com.pdf.manager.pdfmanageruser.entity.User">
        <id column="id" property="id" jdbcType="CHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="mobilePhoneNumber" property="mobilePhoneNumber" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="add" keyProperty="id" keyColumn="id">
        insert into User (id, ip, name, department)
        values (#{id}, #{ip}, #{name}, #{department})
    </insert>

    <insert id="addRange">
        insert into User (id, ip, name, department)
        values
        <foreach collection="list" item="user" index="index" separator=",">
            (#{user.id}, #{user.ip}, #{user.name}, #{user.department})
        </foreach>
    </insert>

    <delete id="delete">
        delete from User
        where id = #{id}
    </delete>

    <update id="update">
        update User
        set ip = #{ip},
            name = #{name},
            department = #{department}
        where id = #{id}
    </update>

    <insert id="addOrUpdate">
        replace into User (id, ip, name, department)
        values (#{id}, #{ip}, #{name}, #{department})
    </insert>

    <select id="getAll" resultMap="userMap">
        select * from User
        order by department
    </select>

    <select id="getById" resultMap="userMap">
        select * from User
        where id = #{id}
    </select>

    <select id="getByName" resultMap="userMap">
        select * from User
        where name like concat('%', #{name}, '%')
    </select>
</mapper>